{
    "name": "soldoc",
    "version": "0.1.0-beta.0",
    "description": "An html page and pdf solidity documentation generator, based in NatSpec format.",
    "main": "src/index.js",
    "bin": {
        "soldoc": "bin/cli.js"
    },
    "scripts": {
        "demo-html": "./bin/cli.js docs/ test/contracts",
        "demo-pdf": "./bin/cli.js --pdf docs/ test/contracts/ERC20.sol",
        "lint:js": "eslint src/*.js .",
        "test": "mocha -r esm",
        "coverage": "nyc --reporter=html --reporter=text npm test",
        "coverage-ci": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
        "docs": "jsdoc ./src/*.js -d ./docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hq20/soldoc.git"
    },
    "keywords": [
        "solidity",
        "solidity-contracts",
        "solidity-documentation",
        "documentation",
        "document",
        "documentation-tool",
        "smart-contracts",
        "html",
        "pdf",
        "pdf-generation"
    ],
    "author": "obernardovieira",
    "license": "GPL-3.0-only",
    "bugs": {
        "url": "https://github.com/hq20/soldoc/issues"
    },
    "homepage": "https://github.com/hq20/soldoc#readme",
    "dependencies": {
        "chalk": "2.4.2",
        "highlight.js": "9.15.6",
        "markdown-it": "8.4.2",
        "markdown-it-emoji": "1.4.0",
        "meow": "5.0.0",
        "mustache": "3.0.1",
        "pdf-from-html": "0.1.0-beta.2",
        "solidity-parser-antlr": "0.4.2"
    },
    "devDependencies": {
        "eslint": "5.15.3",
        "eslint-config-airbnb": "17.1.0",
        "eslint-config-airbnb-base": "13.1.0",
        "eslint-plugin-import": "2.16.0",
        "eslint-plugin-jsx-a11y": "6.2.1",
        "eslint-plugin-react": "7.12.4",
        "esm": "3.2.18",
        "expect.js": "0.3.1",
        "jsdoc": "3.5.5",
        "mocha": "6.0.2",
        "nyc": "13.3.0",
        "coveralls": "3.0.3",
        "mocha-lcov-reporter": "1.3.0"
    },
    "nyc": {
        "all": true,
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "**/*.spec.js",
            "bin/*.js",
            "src/utils/*.js"
        ]
    }
}
